@using CosmeticTrade.DAL.ORM.Entity
@model List<Category>
@{
    ViewBag.Title = "List";
}

<div class="table-responsive-sm table-fontsize-sm">
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Description
            </th>
            <th style="width:94px;"></th>
        </tr>

        @foreach (var cat in Model)
        {
            <tr>
                <td style="text-transform:uppercase;">
                    @Html.DisplayFor(modelItem => cat.Name)
                </td>
                <td style="text-transform:capitalize;">
                    @Html.DisplayFor(modelItem => cat.Description)
                </td>
                <td>
                    <a href="/Admin/Category/AddOrUpdate/@cat.Id" class="btn btn-primary btn-sm"><i class='far fa-edit'></i></a>
                    <a href="/Admin/Category/Delete/@cat.Id" class="btn btn-danger btn-sm"><i class="far fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </table>
</div>

